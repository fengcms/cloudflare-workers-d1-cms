{
  "name": "cloudflare-workers-d1-cms",
  "version": "1.0.0",
  "description": "项目提供接口为 JSON 格式，支持多个文章站点从本后端接口提供数据。",
  "main": "index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply cms_development --local",
    "db:migrate:staging": "wrangler d1 migrations apply cms_staging --env staging",
    "db:migrate:production": "wrangler d1 migrations apply cms_production --env production",
    "db:studio": "drizzle-kit studio",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^25.2.3",
    "bcryptjs": "^3.0.3",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "typescript": "^5.9.3",
    "viem": "^2.46.1",
    "wrangler": "^4.65.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.0",
    "@cloudflare/workers-types": "^4.20260214.0",
    "@fast-check/vitest": "^0.2.4",
    "@types/better-sqlite3": "^7.6.13",
    "@vitest/coverage-v8": "^4.0.18",
    "better-sqlite3": "^12.6.2",
    "fast-check": "^4.5.3",
    "vitest": "^4.0.18"
  }
}
